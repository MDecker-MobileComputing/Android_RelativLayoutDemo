<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    xmlns:tools="http://schemas.android.com/tools"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    tools:context=".MainActivity" >

    <!--
    		Beispiel für zwei sich teilweise überlappende UI-Elemente.
    -->

    <TextView android:id="@+id/textview_a"         
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:background="#80FFFF00"
              android:gravity="center"
              android:text="@string/label_textview_a"
              android:textSize="25sp" />

    <TextView android:id="@id/textview_b"         
              android:layout_height="match_parent"
              android:layout_width="wrap_content"
              android:background="#800000FF"
              android:gravity="center"
              android:text="@string/label_textview_b"
              android:textSize="25sp" />
    
</RelativeLayout>