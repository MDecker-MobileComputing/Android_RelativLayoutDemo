<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    xmlns:tools="http://schemas.android.com/tools"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    tools:context=".MainActivity" >

    <!--
      Das erste TextView-Element referenziert mit dem Attribut "layout_below"
      das zweite TextView-Element, das erst danach ("weiter unten") deklariert
      wird.
    -->

    <TextView android:id="@+id/textview_a"         
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:background="#80D0D000"
              android:layout_below="@+id/textview_b"
              android:text="@string/label_textview_a"
		      android:textSize="25sp" />

    
    <TextView android:id="@id/textview_b"         
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_alignParentRight="true"
              android:background="#8000D0D0"
              android:text="@string/label_textview_b"
		      android:textSize="25sp" />
        
</RelativeLayout>